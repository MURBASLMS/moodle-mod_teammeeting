{{!
    @template mod_teammeeting/mobile/select-group

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * cmid - [int] Course module identifier.
    * resource - [object]
    * resource.intro - [string] Formatted activity description.
    * details - [string] Details to be displayed to the user.

    Example context (json): @todo change example
    {
        "cmid": 42,
        "resource": {
            "intro": "<h3>Activity description</h3>"
        },
        "details": ""
    }
}}

{{=<% %>=}}
<div>
    <core-course-module-description
            description="<% resource.intro %>"
            component="mod_teammeeting"
            componentId="<% cmid %>">
    </core-course-module-description>

    <ion-list>

        <%# details %>
            <ion-item>
                <p>
                    <ion-icon class="icon fa fa-info-circle" aria-hidden="true" role="info" name="fa-info-circle" style="padding-right: .3em;"></ion-icon>
                    <% details %>
                </p>
            </ion-item>
        <%/ details %>

        <ion-item>
            <ion-button block core-link capture="false" inApp="false" autoLogin="yes" href="<% cmurl %>" >
                <ion-icon name="link" role="img" start class="icon icon-md ion-md-link" aria-label="link" style="padding-right: .3em;"></ion-icon>
                {{ 'plugin.mod_teammeeting.viewontheweb' | translate }}
            </ion-button>
        </ion-item>

    </ion-list>
</div>